{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project Greeter. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    },
    "envVarSALUTATIONGreeterParameter": {
      "Type": "String",
      "Description": "Value of the environment variable: SALUTATION, for Lambda: Greeter"
    }
  },
  "Outputs": {
    "Greeter": {
      "Description": "ARN of Lambda function Greeter",
      "Value": {
        "Fn::GetAtt": [
          "Greeter",
          "Arn"
        ]
      }
    },
    "Hello": {
      "Description": "ARN of Lambda function Hello",
      "Value": {
        "Fn::GetAtt": [
          "Hello",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "Greeter": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "Greeter",
        "Description": "Invokes functions defined in Greeter.js in project Greeter. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "Greeter.handler",
        "Timeout": 60,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "GreeterExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "COMMON_ENV_VAR": "1357",
            "SALUTATION": {
              "Ref": "envVarSALUTATIONGreeterParameter"
            },
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "GreeterExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "GreeterPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "translate:translateText"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "Hello": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "Hello",
        "Description": "Invokes functions defined in Hello.py in project Greeter. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "Hello.handler",
        "Timeout": 60,
        "Runtime": "python3.8",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "HelloExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "COMMON_ENV_VAR": "1357",
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "HelloExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        }
      }
    }
  }
}